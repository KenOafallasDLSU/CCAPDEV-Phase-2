<div class=' bg-brain'>
			<div class="container">
				<div class='media'>
					<a class='pull-left' href='#'>
						<img class="media-object small-brain" method='post' src="{{img}}">
					</a>
					<div class='media-body'>
						<h1 class ="text-brain">Big Brain Movies</h1>
					</div>
				</div>
			</div>
</div>

<div class='container'>
	{{>messages}}
	<form name="loginForm" action="/user-login" method="POST">
		<br>
		<div class="form-group">
			<label>Email</label>
			<input name='emaillog' type='email' placeholder='Enter Your Email' id='emaillog' name='emaillog' class='form-control'></input>
		</div>
		<div class="form-group">
			<label>Password</label>
			<input name='passlog' type='password' placeholder='Enter Your Password' id='passlog' name='passlog' class='form-control'></input>
		</div>
		<button style='background-color: #3E6F71; border-color: #3E6F71; color: white;' class="btn btn-sm" value='Log In' id="login">Login</button>
		<br>
		<a href="" data-toggle="modal" data-target="#registerForm"> I am not a user yet.</a>
	</form>
</div>

<div class="modal fade" id="registerForm" tabindex="-1" role="dialog" aria-labelledby="registerTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="registerTitle">Not a user yet? Create an account now!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
				<form name="registerform" action="/user-register" method="POST">
					<div class="form-group">
						<label>First Name</label>
						<input id='fname' name='fname' type='text' placeholder='Enter Your First Name' class="form-control"></input>
					</div>
					<div class="form-group">
						<label>Last Name</label>
						<input id='lname' name='lname' type='text' placeholder='Enter Your Last Name' class="form-control"></input>
					</div>
					<div class="form-group">
						<label>Email</label>
						<input id='emailreg' name='emailreg' type='email' placeholder='Enter Your Email' class="form-control"></input>
					</div>
					<div class="form-group">
						<label>Password</label>
						<input id='passreg' name='passreg' type='password' placeholder='Enter Your Password' class="form-control"></input>
					</div>
					<div class="form-group">
						<button type="button" class="btn btn-light" id="employee-btn">I am an Employee</button>
						<button type="button" class="btn btn-light" id="user-btn">I am a Customer</button>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" id="typeuser" name="typeuser" value="" hidden>
					</div>
					<button style='background-color: #3E6F71; border-color: #3E6F71; color: white;' class="btn-block btn" value="Register" id='reg'>Register</button>
				</form>
      </div>
    </div>
  </div>
</div>

<div class='container fixed-bottom'>
